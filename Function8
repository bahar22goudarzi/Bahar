#include <iostream>
using namespace std;

float average(float x1, float x2, float x3, float x4) {
    return (x1 + x2 + x3 + x4) / 4;
}

int main() {
    float a, b, c, d;
    cout << "Enter 4 numbers: ";
    cin >> a >> b >> c >> d;
    
    cout << "Average is: " << average(a, b, c, d) << endl;
    return 0;
}
