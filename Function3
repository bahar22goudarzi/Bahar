#include <iostream>
#include <cmath>
using namespace std;

void verifyTrigIdentity() {
    double x;
    cout << "Enter x in radians: ";
    cin >> x;
    
    double result = pow(cos(x), 2) + pow(sin(x), 2);
    
    cout << "cos²(x) + sin²(x) = " << result << endl;
    cout << "Difference from 1: " << abs(result - 1) << endl;
}

int main() {
    verifyTrigIdentity();
    return 0;
}
