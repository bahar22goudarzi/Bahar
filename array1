#include <iostream>
using namespace std;

int main() {
    const int SIZE = 5;
    double a[SIZE];
    
    cout << "Enter " << SIZE << " numbers\n";
    for (int i = SIZE-1; i >= 0; i--) {
        cout << "a[" << i << "]: ";
        cin >> a[i];
    }
    
    cout << "\nIn reverse order, they are:\n";
    for (int i = 0; i < SIZE; i++) {
        cout << "a[" << i << "] = " << a[i] << endl;
    }
    
    return 0;
}
