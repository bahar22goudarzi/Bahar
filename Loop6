#include <iostream>
using namespace std;

int main() {
    int n, sum = 0;
    cout << "Enter a positive integer: ";
    cin >> n;
    
    if (n <= 0) {
        cout << "Please enter a positive number." << endl;
        return 1;
    }
    
    for (int i = n; i > 0; i--) {
        sum += i * i;
    }
    
    cout << "Sum of squares from 1 to " << n << " is: " << sum << endl;
    return 0;
}
