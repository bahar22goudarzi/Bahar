#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter a number: ";
    cin >> n;
    
    // حلقه for اصلی
    cout << "Using for loop: ";
    for (int i=1; i <= n; i++) {
        cout << i*i << " ";
    }
    cout << endl;
    
    // تبدیل به while
    cout << "Using while loop: ";
    int i = 1;
    while (i <= n) {
        cout << i*i << " ";
        i++;
    }
    cout << endl;
    
    return 0;
}
